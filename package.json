{
  "name": "typescript-courses-com",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "clearDist": "node scripts/clearDist.js",
    "build": "npm run clearDist && tsc && copyfiles -u 1 ./src/**/*.html dist",
    "dev": "node --inspect=5858 -r ts-node/register ./src/server.ts ./src/public",
    "dev:watch": "nodemon --delay 5 -e ts,js,html",
    "prod": "npm run build && node dist/server.js"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "npm run dev",
    "ext": [
      "ts",
      "js",
      "html"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/express": "^4.17.1",
    "@types/mongodb": "^3.3.3",
    "@types/node": "^12.7.8",
    "@types/ramda": "^0.26.25",
    "@types/uuid": "^3.4.5",
    "copyfiles": "^2.1.1",
    "nodemon": "^1.19.2",
    "ts-node": "^8.4.1",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongodb": "^3.3.2",
    "ramda": "^0.26.1",
    "uuid": "^3.3.3"
  }
}
